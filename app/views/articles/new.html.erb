<div ng-controller='ArticleNewCtrl'>
  <h3> Post a new article </h3>
  <ng-form='ArticleNew' role='form'>
    <div class='row'>
      <div class='col-xs-8'>
        <div class='form-group'>
          <label for='title' class='sr-only'>Title</label>
          <input type='text' class='form-control input-lg' id='article-title' placeholder='Title'>
        </div>
      </div>
    </div>

    <div class='form-group'>
      <label for='body' class='sr-only'>Article Body</label>
      <textarea class='form-control' rows='9' id='article-body' placeholder='Article'></textarea>
    </div>

    <div class='form-group'>
      <label for='published_at'>Published At</label>
      <input type='datetime-local' class='form-control datepicker' data-provide='datepicker'>
    </div>

    Tags
    <p ng-repeat='mytag in article.tags'> {{ mytag }}</p>
    <div class='row'>
      <div class='col-xs-2'>
        <div class='form-group'>
          <input class='form-control' ng-model='articleTag'>
          <button type='button' ng-click='addTag(articleTag)' class='btn btn-default btn-sm' >
            <span class="glyphicon glyphicon-plus"></span>
          </button>
        </div>
      </div>
    </div>

    <button type='submit' class='btn btn-info'>Submit</button>

  </form>
</div>
