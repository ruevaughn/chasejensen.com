<h3> Post New Article </h3>
<div ng-controller='ArticleNewCtrl'>
  {{ article.publishedAt | date:'mediumDate' }} | <a>Change</a>

  <ng-form='ArticleNew' role='form'>
    <div class='row'>
      <div class='col-xs-8'>
        <div class='form-group'>
          <label for='article-title' class='sr-only'>Title</label>
          <input type='text' ng-model='article.title' class='form-control input-lg' id='article-title' placeholder='Title'>
        </div>
      </div>
    </div>

    <div class='form-group'>
      <label for='article-body' class='sr-only'>Article Body</label>
      <textarea ng-model='article.body' class='form-control' rows='9'  placeholder='Article'></textarea>
    </div>

    <strong ng-repeat='tag in article.tags'> {{ tag }}</strong>

    <ng-form='TagNew' role='form' class='form-inline'>
      <div class='form-group'>
        <input class='form-control' ng-model='articleTag' placeholder='Add a Tag'>
      </div>
      <div class='form-group'>
        <button type='button' ng-click='addTag(articleTag)' class='btn btn-default btn-sm' >
          <a>create</a>
        </button>
      </div>
      </ng-form>
    <div class='form-group pull-right'>

      <button ng-show='preview' ng-click='preview = nil' class='btn btn-default btn-warning'>Clear</button>
      <button ng-click='showPreview(article.body, article.title)' class='btn btn-default'>Preview</button>
      <button type='submit' class='btn btn-info'>Create</button>
    </div>

    <table ng-show='preview' class='table'>
      <tr class='active'>
        <h1 ng-bind-html="preview.title"></h1>
        <td ng-bind-html="preview.body"></td>
      </tr>
    </table>

  </ng-form>
</div>


